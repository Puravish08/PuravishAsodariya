<?xml version="1.0" encoding="utf-8"?>
<resources>







    <!-- Section Header Text Style -->
    <style name="SectionHeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Skill Card Horizontal Style -->
    <style name="SkillCardHorizontal">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <!-- Skill Chip Style -->
    <style name="SkillChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="chipBackgroundColor">@color/card_dark</item>
        <item name="chipStrokeColor">@color/accent_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <!-- Tool Grid Item Style -->
    <style name="ToolGridItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>

    <!-- Circle image style -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Chip text color selector -->
<!--    <style name="ChipTextStyle">-->
<!--        <item name="android:textColor">@color/chip_text_selector</item>-->
<!--    </style>-->


</resources>